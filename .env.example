# Bug Bounty Recon Configuration
# Copy this file to .env and fill in your API keys

# Shodan API Key (get one from https://account.shodan.io/)
SHODAN_API_KEY=your_shodan_api_key_here

# VirusTotal API Key (optional, for gau)
VT_API_KEY=your_virustotal_api_key_here

# AlienVault OTX API Key (optional, for gau)
ALIEN_API_KEY=your_alienvault_api_key_here

# Python subdomain enumeration script path
PYTHON_SCRIPT=/root/tools/subdomain-enum/subdomain-Enum.py

# Wordlists
SUBDOMAIN_WORDLIST=/root/myLists/subdomains.txt
VHOST_WORDLIST=/root/myLists/vhost-wordlist.txt
DNS_RESOLVERS=/root/myLists/resolvers.txt

# VHost Fuzzing Settings
# Maximum number of IPs to test (default: 50)
MAX_VHOST_IPS=50

# ═══════════════════════════════════════════════════════════
# TIMEOUT SETTINGS (prevents infinite hangs)
# ═══════════════════════════════════════════════════════════

# Global phase timeouts (in minutes) - Maximum time for each scan phase
# Set to 0 to disable timeout (not recommended)
SUBDOMAIN_ENUM_TIMEOUT=600      # 10 hours for subdomain enumeration
URL_CRAWLING_TIMEOUT=600        # 10 hours for URL discovery
PORT_SCAN_TIMEOUT=600           # 10 hours for port scanning
VULN_SCAN_TIMEOUT=600           # 10 hours for vulnerability scanning
CLOUD_ENUM_TIMEOUT=60           # 1 hour for cloud enumeration
NUCLEI_SCAN_TIMEOUT=600         # 10 hours for Nuclei scanning

# Individual tool timeouts (in minutes)
# These apply to specific tools within each phase
WAYBACKURLS_TIMEOUT=30          # 30 minutes for waybackurls
GAU_TIMEOUT=30                  # 30 minutes for gau
KATANA_TIMEOUT=60               # 1 hour for katana crawling
KATANA_PARAMS_TIMEOUT=60        # 1 hour for katana params
WAYMORE_TIMEOUT=10              # 10 minutes for waymore
GOSPIDER_TIMEOUT=60             # 1 hour for gospider
WEBARCHIVE_TIMEOUT=30           # 30 minutes for web archive CDX

# Domain limits (prevents processing too many targets)
WAYMORE_MAX_DOMAINS=100         # Max domains for waymore (0 = all)
GAU_MAX_DOMAINS=200             # Max domains for gau (0 = all)
KATANA_MAX_DOMAINS=150          # Max domains for katana (0 = all)
GOSPIDER_MAX_DOMAINS=100        # Max domains for gospider (0 = all)
